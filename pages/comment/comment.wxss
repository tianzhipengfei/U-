/* pages/comment/comment.wxss */

page {
    background: #f5f5f5;
}

.productName {
    background-color: white;
    width: 100%;
    padding-top: 15rpx;
    height: 130rpx;
    line-height: 100rpx;
    font-size: 40rpx;
    text-align: center;
    border-bottom: 5rpx rgba(0, 0, 0, 0.1) solid;
}

.starBox {
    margin-top: 30rpx;
    padding-bottom: 30rpx;
    padding-top: 10rpx;
    width: 100%;
    background-color: white;
    height: 450 auto;
    display: flex;
    flex-direction: column;
    border-bottom: 5rpx rgba(0, 0, 0, 0.1) solid;
}

.starItem {
    width: 100%;
    height: 80rpx;
    display: flex;
    padding-left: 90rpx;
}

.starType {
    line-height: 100rpx;
    font-size: 30rpx;
    width: 120rpx;
}

.starContainer {
    margin-left: 125rpx;
    display: flex;
}

.star {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top: 30rpx;
    margin-left: 10rpx;
}

#totalComStar {
    margin-left: 40rpx;
}

textarea {
    width: 700rpx;
    padding: 25rpx 25rpx;
    height: 200rpx;
}

.textarea-wrp {
    margin-top: 40rpx;
    width: 100%;
    background-color: #fff;
}

.addPhotoContainer{
    margin-top: 40rpx;
    width: 90%;
    margin-left: 5%;
    border-top: 5rpx rgba(0, 0, 0, 0.1) solid;
    padding: 40rpx;
    border-bottom: 5rpx rgba(0, 0, 0, 0.1) solid;
}

.addPhoto{
    width: 200rpx;
    height: 200rpx;
}